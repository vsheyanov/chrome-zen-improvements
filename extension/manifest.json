{
    "manifest_version": 3,
    "name": "Tab Manager & Logger",
    "version": "1.5.0",
    "description": "Chrome extension that detects New Tab button clicks and moves those tabs to the beginning",
    "permissions": [
        "tabs",
        "scripting",
        "clipboardWrite"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Tab Manager & Logger",
        "default_popup": "popup.html"
    },
    "commands": {
        "copy-current-url": {
            "suggested_key": {
                "default": "Ctrl+Shift+C",
                "mac": "Command+Shift+C"
            },
            "description": "Copy current tab URL to clipboard"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}